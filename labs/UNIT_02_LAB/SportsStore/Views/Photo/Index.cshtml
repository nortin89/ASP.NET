@model IEnumerable<SportsStore.Models.Photo>
@{
  ViewBag.Title = "Admin: All Photos";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
  <h3>All Photos</h3>
</div>

<div class="d-flex flex-row-reverse">
  @Html.ActionLink("Upload", "Upload", null, new { @class = "btn btn-primary"})
</div>
<div class="row">
  @foreach (var photo in Model)
  {
    <div class="col-lg-2 col-md-4">
      <div class="card m-1">
        <div class="card-body">
          #@photo.PhotoId @photo.ImageName
        </div>
        <img src="@Url.Action("GetImage","Photo",new { photoId = photo.PhotoId })" class="card-img-bottom" alt="" />
      </div>
    </div>
  }
</div>

