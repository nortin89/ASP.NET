@model IEnumerable<SportsStore.Models.Product>

@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-light p-3">
  <h3>All Products</h3>
</div>
<div class="p-3">
  <table class="table table-striped" table-bordered>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td>@item.ProductID</td>
          <td>@Html.ActionLink(item.Name,"Edit",routeValues:new { productId = item.ProductID})</td>
          <td>@($"{item.Price:C}")</td>
          <td>@using (Html.BeginForm("Delete", "Admin"))
          {
            @Html.Hidden("ProductID",item.ProductID)
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          }
            </td>
        </tr>
      }
    </tbody>
  </table>

</div>
<div class="bg-light p-3 text-center">
  @Html.ActionLink("Add a new product", "Create", null,
    new { @class = "btn btn-secondary" })
</div>
