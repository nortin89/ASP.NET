@model MpgCalc.Models.RosterItem
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
  <main class="container">
    @using (Html.BeginForm("Roster", "Index", FormMethod.Post, htmlAttributes: new { @class = "form" }))
    {
      <div class="form-group mb-2">
        <label for="FirstName">Please enter First Name: </label>
        @Html.TextBoxFor(x => x.FirstName, htmlAttributes: new { @class = "form-control" })

        <p>@Html.ValidationMessageFor(x =>x.FirstName, null, htmlAttributes: new { @class = "text-danger" })</p>
      </div>
      <div class="form-group mb-2">
        <label for="LastName">Enter Last Name:</label>
        @Html.TextBoxFor(x => x.LastName, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.LastName, null, htmlAttributes: new { @class = "text-danger" })
      </div>
      <div class="form-group mb-2">
        <label for="Email">Enter in Email: </label>
        @Html.TextBoxFor(x => x.Email, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Email, null, htmlAttributes: new { @class = "text-danger" })
      </div>
      <div class="form-group mb-2">
        <button type="submit" value="Submit Info" class="btn btn-primary btn-lg">Submit</button>
      </div>
    }
  </main>`
</body>
</html>
