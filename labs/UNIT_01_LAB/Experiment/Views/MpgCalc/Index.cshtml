@model Experiment.Models.MpgCalcModel

<!DOCTYPE html>

<html>
<head>
  <meta name="viewport" content="width=device-width" />

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <title>MPG Calculator</title>
</head>
<body>
  <main class="container">
    <h1>MPG Calculator</h1>
    @using (Html.BeginForm())
    {
      <div class="form-group mb-2">
        <label for="MilesDriven">Miles Driven</label>
        @Html.TextBoxFor(x => x.MilesDriven, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.MilesDriven, null, htmlAttributes: new { @class = "text-danger" })
      </div>
      <div class="form-group mb-2">
        <label for="GallonsUsed">Gallons Used</label>
        @Html.TextBoxFor(x => x.GallonsUsed, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.GallonsUsed, null, htmlAttributes: new { @class = "text-danger" })
      </div>
      <div class="form-group mb-2">
        <label for="PricePerGallon">Price per Gallon</label>
        @Html.TextBoxFor(x => x.PricePerGallon, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PricePerGallon, null, htmlAttributes: new { @class = "text-danger" })
      </div>

      //recomend putting submit button in form group
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Calculate</button>
      </div>
    }

  </main>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
