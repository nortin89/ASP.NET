  <section id="contact-page">

    <main class="container">
      <h2>Contact Me!</h2>
      <p>Ask me Anything</p>
      @using (Html.BeginForm("ContactReply", "Home", FormMethod.Post, htmlAttributes: new { @class = "form" }))
      {
        <div class="form-group mb-2">
          <label for="Name">Your Name:</label>
          @Html.TextBoxFor(x => x.Name, htmlAttributes: new { @class = "form-control" })

          <p>@Html.ValidationMessageFor(x => x.Name, null, htmlAttributes: new { @class = "text-danger" })</p>
        </div>
        <div class="form-group mb-2">
          <label for="Email">Your Email:</label>
          @Html.TextBoxFor(x => x.Email, htmlAttributes: new { @class = "form-control" })
          @Html.ValidationMessageFor(x => x.Email, null, htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="form-group mb-2">
          <label for="Message">Send me a message:</label>
          @Html.TextBoxFor(x => x.Message, htmlAttributes: new { @class = "form-control" })
          @Html.ValidationMessageFor(x => x.Message, null, htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="form-group mb-2">
          <button type="submit" value="Submit Info" class="btn btn-primary btn-lg">Submit</button>
        </div>
      }
    </main>
  </section>
