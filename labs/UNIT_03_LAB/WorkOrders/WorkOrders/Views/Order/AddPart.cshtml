@model WorkOrders.Models.Part

@using (Html.BeginForm("AddPart", "Order"))
{
  @Html.ValidationSummary("", new { @class = "text-danger" })
  @Html.HiddenFor(x => x.OrderId)
  @Html.HiddenFor(x => x.CustomerId)
  <div class="p-3">
    <div class="form-group">
      @Html.LabelFor(x => x.PartNumber)
      @Html.TextBoxFor(x => x.PartNumber, new { @class = "form-control  " })
      @Html.ValidationMessageFor(x => x.PartNumber, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(x => x.PartName)
      @Html.TextBoxFor(x => x.PartName, new { @class = "form-control  " })
      @Html.ValidationMessageFor(x => x.PartName, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(x => x.Quantity)
      @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control  " })
      @Html.ValidationMessageFor(x => x.Quantity, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(x => x.PartCost)
      @Html.TextBoxFor(x => x.PartCost, new { @class = "form-control  " })
      @Html.ValidationMessageFor(x => x.PartCost, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">Add</button>
      <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">Cancel</button>
    </div>
  </div>

}