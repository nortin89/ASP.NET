@model Blogger.Models.BlogPost
@{
  ViewBag.Title = "My Personal Blog: Edit Blog Post";
}

<h2>Edit Blog Post</h2>
<p>Edit blog post here...</p>
<div class="bg-light p-3">
  <h3>@ViewBag.Title</h3>
</div>
@using (Html.BeginForm("Edit", "Admin"))
{
  @Html.ValidationSummary("", new { @class = "text-danger" })
  @Html.HiddenFor(x => x.BlogPostId)
  <div class="p-3">
    <div class="form-group">
      @Html.LabelFor(x => x.Title)
      @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
      @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(x => x.Posted)
      @Html.TextAreaFor(x => x.Posted, new { @class = "form-control" })
      @Html.ValidationMessageFor(x => x.Posted, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(x => x.Text)
      @Html.TextBoxFor(x => x.Text, new { @class = "form-control" ,rows = 5})
      @Html.ValidationMessageFor(x => x.Text, null, new { @class = "text-danger" })
    </div>
    @*<div class="form-group">
      @Html.LabelFor(x => x.Category)
      @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
      @Html.ValidationMessageFor(x => x.Category, null, new { @class = "text-danger" })
    </div>*@
  </div>
  <div class="bg-light p-3">
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel and return to List", "Index", null,
            htmlAttributes: new { @class = "btn btn-secondary" })
  </div>
}