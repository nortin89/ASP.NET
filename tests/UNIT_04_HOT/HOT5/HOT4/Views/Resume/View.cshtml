@model HOT4.Models.Resume

<div class="p-5">
  <h2>Resume Info of : @Model.FullName</h2>
  <table class="table table-bordered table-condensed table-striped">
    <tr>
      <td>Phone Number :</td>
      <td>@Model.PhoneNumber</td>
    </tr>
    <tr>
      <td>Email :</td>
      <td>@Model.EmailAddress</td>
    </tr>
    <tr>
      <td>LinkedIn :</td>
      <td>@Model.LinkedIn</td>
    </tr>
  </table>
  <table class="table table-bordered table-condensed table-striped">
    <tr>
      <td>
        <table class="table table-bordered table-condensed table-striped">
          <tr>
            <td colspan="2">Top Skills</td>
          </tr>
          <tr>
            <td>Skill Name</td>
            <td>@Model.Skills</td>
          </tr>
          <tr>
            <td colspan="2">Relevant Projects</td>
          </tr>
          <tr>
            <td>Project Name</td>
            <td>@Model.Projects</td>
          </tr>
          @*<tr>
              <td>Technologies Used</td>
              <td>@Model.Technologies</td>
            </tr>*@
          @*<tr>
              <td>Project Description</td>
              <td>@Model.Descriptions</td>
            </tr>*@

        </table>
      </td>
      <td>
        <table class="table table-bordered table-condensed table-striped">
          <tr>
            <td colspan="2">
              Education
            </td>
          </tr>
          <tr>
            <td>Education</td>
            <td>@Model.Educations</td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
  <p>
    @Html.ActionLink("Back To Home", "Index")
  </p>
</div>

